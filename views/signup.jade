extends layout

block content
  
  div#signup-box
    img(src="/images/logo_init.png")#logo_init(alt="Check with Mates")
    
    div#form
      form#signup_form(action='/signup', method='POST')
        - if(message && message.length > 0)
          .button.fullwidth.warn=message
        input.fullwidth.textinput#email(placeholder='email', type='email', maxlength='50', name='email')
        input.fullwidth.textinput#username(placeholder='username', maxlength='50', name='username')
        input.fullwidth.textinput#password(placeholder='password', type='password', maxlength='50', name='password')
        input.fullwidth.textinput#password-confirm(placeholder='confirm password', type='password', maxlength='50', name='confirmpassword')
        div.button.fullwidth#joinnow join now
      a.faded(href='/') you already have an account?
      h5 or
      a.faded(href='/forgot') forgot your password?

block scripts
  script(type='text/javascript', src='/javascripts/vendor/lodash.js')
  script(type='text/javascript', src='/javascripts/signup.js')